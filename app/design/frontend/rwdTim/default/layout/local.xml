<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="setRobots"><value>NOINDEX,NOFOLLOW</value></action>
            <action method="addJs"><script>lib/jquery/jquery.maskedinput.min.js</script></action>
        </reference>
    </default>
    <checkout_cart_index translate="label">
        <reference name="content">
            <remove name="checkout.cart.coupon"/>
            <remove name="checkout.cart.shipping"/>
        </reference>
    </checkout_cart_index>
    <catalog_product_view>
        <reference name="product.info">
            <block type="catalog/product_view_attributes" name="product.tim_tabs1" as="tim_tabs1" template="catalog/product/view/tim_tabs1.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Rewolucja LED</value></action>
            </block>
            <block type="catalog/product_view_attributes" name="product.tim_tabs2" as="tim_tabs2" template="catalog/product/view/tim_tabs2.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>E14 - parametry</value></action>
            </block>
            <block type="catalog/product_view_attributes" name="product.tim_tabs3" as="tim_tabs3" template="catalog/product/view/tim_tabs3.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>E27 - parametry</value></action>
            </block>
            <block type="catalog/product_view_attributes" name="product.tim_tabs4" as="tim_tabs4" template="catalog/product/view/tim_tabs4.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Mity dotyczące żarówek LED</value></action>
            </block>
            <block type="catalog/product_view_attributes" name="product.tim_tabs5" as="tim_tabs5" template="catalog/product/view/tim_tabs5.phtml">
                <action method="addToParentGroup"><group>detailed_info</group></action>
                <action method="setTitle" translate="value"><value>Zobacz film</value></action>
            </block>			
        </reference>
    </catalog_product_view>
</layout>