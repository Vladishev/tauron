<config>
    <modules>
        <Tim_Tauron>
            <version>0.0.5</version>
        </Tim_Tauron>
    </modules>
    <global>
        <blocks>
            <tim_tauron>
                <class>Tim_Tauron_Block</class>
            </tim_tauron>
            <bundle>
                <rewrite>
                    <checkout_cart_item_renderer>Tim_Tauron_Block_Checkout_Cart_Item_Renderer</checkout_cart_item_renderer>
                </rewrite>
            </bundle>
            <checkout>
                <rewrite>
                    <onepage>Tim_Tauron_Block_Checkout_Onepage</onepage>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <tim_tauron>
                <class>Tim_Tauron_Helper</class>
            </tim_tauron>
        </helpers>
        <models>
            <tim_tauron>
                <class>Tim_Tauron_Model</class>
                <resourceModel>tim_tauron_resource</resourceModel>
            </tim_tauron>
            <tim_tauron_resource>
                <class>Tim_Tauron_Model_Resource</class>
                <entities>
                    <complaint>
                        <table>tim_complaint</table>
                    </complaint>
                </entities>
            </tim_tauron_resource>
            <sales>
                <rewrite>
                    <order>Tim_Tauron_Model_Order</order>
                </rewrite>
            </sales>
            <customer>
                <rewrite>
                    <customer>Tim_Tauron_Model_Customer</customer>
                </rewrite>
            </customer>
            <checkout>
                <rewrite>
                    <type_onepage>Tim_Tauron_Model_Checkout_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>
            <core>
                <rewrite>
                    <store>Tim_Tauron_Model_Store</store>
                </rewrite>
            </core>
            <directory>
                <rewrite>
                    <currency>Tim_Tauron_Model_Currency</currency>
                </rewrite>
            </directory>
        </models>
        <resources>
            <tim_tauron_setup>
                <setup>
                    <module>Tim_Tauron</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tim_tauron_setup>
            <tim_tauron_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </tim_tauron_write>
            <tim_tauron_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </tim_tauron_read>
        </resources>
        <template>
            <email>
                <sales_email_order_przelewy24_template translate="label" module="sales">
                    <label>New Order</label>
                    <file>sales/order_new_przelewy24.html</file>
                    <type>html</type>
                </sales_email_order_przelewy24_template>
                <sales_email_order_banktransfer_template translate="label" module="sales">
                    <label>New Order</label>
                    <file>sales/order_new_bank_transfer.html</file>
                    <type>html</type>
                </sales_email_order_banktransfer_template>
                <sales_email_order_cashondelivery_template translate="label" module="sales">
                    <label>New Order</label>
                    <file>sales/order_new_cashondelivery.html</file>
                    <type>html</type>
                </sales_email_order_cashondelivery_template>
                <complaint_template translate="label" module="tim_tauron">
                    <label>Complaint email</label>
                    <file>complaint.html</file>
                    <type>html</type>
                </complaint_template>
            </email>
        </template>
        <events>
            <controller_action_predispatch_checkout_cart_add>
                <observers>
                    <tim_tauron_close_access>
                        <class>tim_tauron/observer</class>
                        <method>closeAccess</method>
                    </tim_tauron_close_access>
                </observers>
            </controller_action_predispatch_checkout_cart_add>
            <catalog_controller_category_init_after>
                <observers>
                    <category_redirect_to_product>
                        <class>tim_tauron/observer</class>
                        <method>categoryRedirect</method>
                    </category_redirect_to_product>
                </observers>
            </catalog_controller_category_init_after>
            <sales_order_place_after>
                <observers>
                    <tim_tauron_save_order_attributes>
                        <type>singleton</type>
                        <class>tim_tauron/observer</class>
                        <method>saveUrlData</method>
                    </tim_tauron_save_order_attributes>
                </observers>
            </sales_order_place_after>
            <checkout_type_onepage_save_order_after>
                <observers>
                    <tim_tauron_save_customer_attributes>
                        <type>singleton</type>
                        <class>tim_tauron/observer</class>
                        <method>saveCustomerAttributes</method>
                    </tim_tauron_save_customer_attributes>
                </observers>
            </checkout_type_onepage_save_order_after>
            <checkout_type_onepage_save_order_after>
                <observers>
                    <tim_send_order_to_crm>
                        <type>singleton</type>
                        <class>tim_tauron/observer</class>
                        <method>sendOrderId</method>
                    </tim_send_order_to_crm>
                </observers>
            </checkout_type_onepage_save_order_after>
            <checkout_onepage_controller_success_action>
                <observers>
                    <logout_and_clear_session>
                        <type>singleton</type>
                        <class>tim_tauron/observer</class>
                        <method>logoutClearSession</method>
                    </logout_and_clear_session>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <tim_tauron before="Mage_Adminhtml">Tim_Tauron_Adminhtml</tim_tauron>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <tim_tauron>
                <use>standard</use>
                <args>
                    <module>Tim_Tauron</module>
                    <frontName>tim_tauron</frontName>
                </args>
            </tim_tauron>
            <checkout>
                <args>
                    <modules>
                        <Tim_Tauron before="Mage_Checkout">Tim_Tauron_Checkout</Tim_Tauron>
                    </modules>
                </args>
            </checkout>
            <customer>
                <args>
                    <modules>
                        <Tim_Tauron before="Mage_Customer">Tim_Tauron_Customer</Tim_Tauron>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>
</config>